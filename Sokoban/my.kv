##:kivy

WindowManager:
    MenuWindow:
    GameWindow:
    LevelWindow:

<Label>:
    background_color: (1,0,0,.5)
    size_hint: 0.3,0.1
    font_size: 40
    color: (0.8,0.8,0.8,1)
    # canvas.before:
    #     Color:
    #         rgba: self.background_color
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

<Button>:
    size_hint: 0.2,0.1
    font_size: 40
    # background_color: (1,1,1,0.01)
    background_color: (0,1,0,1)

<MenuWindow>:
    name: "menu"

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "data/images/debili/background.png"

    Label:
        text:"FIFOban"
        pos_hint: {"x":0.35, "y":0.8}

    Button:
        text:"PLAY"
        pos_hint: {"x":0.4, "y":0.25}
        on_press:
            root.play_music()
            app.root.current = "level"
            root.manager.transition.direction="left"

<LevelWindow>:
    name:"level"
    levels_layout:levels_layout

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos
            source: "data/images/debili/background2.png"

    Label:
        text:"Levels:"
        pos_hint: {"x":0.35, "y":0.8}

    GridLayout:
        id:levels_layout
        cols:3
        size_hint:0.8,0.6
        pos_hint:{"x":0.1, "y":0.1}

<GameWindow>:
    name:"game"

    canvas.before:
        Color:
            rgba: (0.5,0.5,0.5,1)
        Rectangle:
            size: self.size
            pos: self.pos
            source: "data/images/debili/background2.png"
        Color:
            rgba: (1,1,1,1)