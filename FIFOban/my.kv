##:kivy

WindowManager:
    MenuWindow:
    GameWindow:
    LevelWindow:

<Label>:
    background_color: (1,0,0,.5)
    size_hint: 0.3,0.1
    font_size: 40
    color: (0.8,0.8,0.8,1)
    # canvas.before:
    #     Color:
    #         rgba: self.background_color
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

<Button>:
    size_hint: 0.2,0.1
    font_size: 40
    # background_color: (1,1,1,0.01)
    background_color: (0,0,1,1)

<MenuWindow>:
    name: "menu"

    Label:
        text:"FIFOban"
        pos_hint: {"x":0.35, "y":0.8}

    Button:
        text:"PLAY"
        pos_hint: {"x":0.4, "y":0.3}
        on_press:
            app.root.current = "level"
            root.manager.transition.direction="left"

<LevelWindow>:
    name:"level"
    levels_layout:levels_layout

    Label:
        text:"Levels:"
        pos_hint: {"x":0.35, "y":0.8}

    GridLayout:
        id:levels_layout
        cols:3
        size_hint:0.8,0.6
        pos_hint:{"x":0.1, "y":0.1}

