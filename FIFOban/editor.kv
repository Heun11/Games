##:kivy

<Label>:
    background_color: (1,0,0,.5)
    size_hint: 0.3,0.1
    font_size: 20
    color: (0.8,0.8,0.8,1)

<TextInput>:
    size_hint: 0.25,0.07
    font_size: 20

<Button>:
    size_hint: 0.15,0.1
    font_size: 20


<editor>:
    canvas.before:
        Color:
            rgba: (.1,.1,.1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    Button:
        text:"save"
        pos_hint:{"y":.9}
        on_press:
            root.save()


    Button:
        text:"G"
        size_hint: 0.05,0.05
        pos_hint:{"y":.05, "x":0.1}
        on_press:
            root.set_block("g")

    Button:
        text:"W"
        size_hint: 0.05,0.05
        pos_hint:{"y":.05, "x":0.15}
        on_press:
            root.set_block("w")

    Button:
        text:"E"
        size_hint: 0.05,0.05
        pos_hint:{"y":.05, "x":0.2}
        on_press:
            root.set_block("e")

    Button:
        text:"B"
        size_hint: 0.05,0.05
        pos_hint:{"y":.05, "x":0.25}
        on_press:
            root.set_block("b")
    
    Button:
        text:"C"
        size_hint: 0.05,0.05
        pos_hint:{"y":.05, "x":0.3}
        on_press:
            root.set_block("c")

    Button:
        text:"P"
