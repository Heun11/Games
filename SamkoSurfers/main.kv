##:kivy

<Label>:
    background_color: (0,0,1,0.5)
    size_hint: 0.3,0.1
    font_size: 25
    color: (1,1,1,1)
    # canvas.before:
    #     Color:
    #         rgba: self.background_color
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

<Button>:
    size_hint: 0.3,0.1
    font_size: 25
    background_color: (0.5,0,0,0.1)

<TextInput>:
    background_color: (.2,.2,.2,1)
    size_hint: 0.55,0.05
    font_size: 20
    foreground_color:(1,1,1,1)
    multiline:False

WindowManager:
    MenuScreen:
    GameScreen:

<MenuScreen>:
	name: 'menu'

    Button:
        text:"play"
        pos_hint: {"x":0.35, "y":0.35}
        color: 0.8,1,0.7,1
        font_size: 80
        canvas.before:
            Color:
                rgba: 1, 0, 1, 0.6
            Rectangle:
                pos: self.pos
                size: self.size
        on_press:
            app.root.current = "game"
            root.manager.transition.direction="up"

<GameScreen>:
    name: "game"
