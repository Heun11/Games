##:kivy

<Label>:
    background_color: (0,0,1,0.5)
    size_hint: 0.3,0.1
    font_size: 25
    color: (1,1,1,1)
    # canvas.before:
    #     Color:
    #         rgba: self.background_color
    #     Rectangle:
    #         size: self.size
    #         pos: self.pos

<Button>:
    size_hint: 0.3,0.1
    font_size: 25
    # background_color: (0.5,0,0,0.1)
    background_color: (0,1,0,1)

<TextInput>:
    background_color: (.2,.2,.2,1)
    size_hint: 0.2,0.1
    font_size: 20
    foreground_color:(1,1,1,1)
    multiline:False

WindowManager:
    MenuScreen:
    GameScreen:

<GameScreen>:
    name: "game"
    code:code

    Label:
        text:"Here goes your code:"
        pos_hint:{"y":0.9}

    Label:
        text:"Sample Audio:"
        pos_hint:{"y":0.9, "x":0.55}

    Label:
        text:"Your Audio:"
        pos_hint:{"y":0.3, "x":0.55}

    TextInput:
        id:code
        size_hint: 0.55, 0.8
        pos_hint:{"x":0.05, "y":0.1}
        multiline:True

    BoxLayout:
        orientation:'horizontal'
        size_hint:0.3,0.1
        pos_hint:{"x":0.65, "y":0.8}

        Button:
            text:"play"
            size_hint: 1,1
            on_press:root.play_sample_audio()
        
        Button:
            text:"stop"
            size_hint: 1,1
            on_press:root.stop_sample_audio()

<MenuScreen>:
	name: 'menu'

    Label:
        text:"Main Menu"
        pos_hint: {"x":0.35, "y":0.75}
        font_size: 80

    Button:
        text:"play"
        pos_hint: {"x":0.35, "y":0.3}
        font_size: 80
        on_press:
            app.root.current = "game"
            root.manager.transition.direction="up"